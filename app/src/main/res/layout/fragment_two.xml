<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoFragment">

    <!-- TODO: Update blank fragment layout -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/colorAccent"
         android:layout_gravity="center"
         android:fontFamily="sans-serif"

         android:textAlignment="center"
         android:text="NEW REQUEST"/>


     <EditText
         android:id="@+id/etDesignType"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:background="@android:color/white"
         android:hint="House Type"
         android:inputType="textPersonName"
         android:padding="10dp" />

     <EditText
         android:id="@+id/etDesignCompatment"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:background="@android:color/white"
         android:hint="House Section"
         android:inputType="textEmailAddress"
         android:padding="10dp" />


     <EditText
         android:id="@+id/etDesignRooms"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:background="@android:color/white"
         android:hint="No Of Rooms"
         android:inputType="number"
         android:padding="10dp" />



     <Button
         android:id="@+id/btnSave"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:background="#f05924"
         android:text="SEND"
         android:textColor="@android:color/white" />
 </LinearLayout>

</FrameLayout>